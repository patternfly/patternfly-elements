<header>
  <div class="logo-bar">
    <a href="{{ '/' | url }}">
      <img src="{{ '/brand/logo/svg/pfe-icon-white-shaded.svg' | url }}" alt="PatternFly Elements - Home">
      PatternFly Elements
    </a>
    <pfe-dropdown id="docs-versions-dropdown" label="Docs Versions">
      <pfe-dropdown-item item-type="link" data-version="v2">
        <a href="{{ page.url }}">v2 prerelease</a>
      </pfe-dropdown-item>
      <pfe-dropdown-item item-type="link" data-version="v1">
        <a href="/v1{{ page.url }}">v1</a>
      </pfe-dropdown-item>
    </pfe-dropdown>
