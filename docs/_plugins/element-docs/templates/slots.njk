{% set level = level or 2 %}
{% set header = header or 'Slots' %}

<section class="api band slots api-properties">
  {{ header | cemMdHeading(level) | safe }} {% if not content and not slots.length %}

  <em>None</em> {%- else -%}

  {{ content | cemInnerMD | safe }}

  <dl> {% for slot in slots -%}
    <dt> {%- if slot.name -%}
      <strong><code>{{ slot.name }}</code></strong> {%- else -%}
      <strong>Default Slot</strong> {% endif %}
    </dt>
    <dd>{{- slot.description | cemInnerMD | safe -}}</dd> {% endfor %}
  </dl> {%- endif -%} {%- if deprecated.length -%}

  <details>
    <summary>{{ ('Deprecated ' + header) | cemMdHeading(level + 1) | safe }}</summary>
    <dl> {% for slot in deprecated -%}
      <dt> {%- if slot.name -%}
        <strong><code>{{ slot.name }}</code></strong> {%- else -%}
        <strong>Default Slot</strong> {% endif %}
      </dt>
      <dd>
        {{- slot.description | cemInnerMD | safe -}}
        <em>Note: {{ slot.name }} is deprecated. {{ slot.deprecated | cemInnerMD | safe }}</em>
      </dd> {% endfor %}
    </dl>
  </details> {%- endif -%}
</section>
