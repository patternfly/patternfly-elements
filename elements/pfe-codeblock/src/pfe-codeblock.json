{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Codeblock",
  "description": "A component to display formatted and prettified code",
  "type": "object",
  "tag": "pfe-codeblock",
  "class": "PfeCodeblock",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "default": {
          "title": "Default slot",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      },
      "required": ["default"]
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "language": {
          "title": "Codeblock Language",
          "type": "string",
          "enum": [
            "html",
            "xml",
            "markup",
            "ja",
            "javascript",
            "clike",
            "css",
            "svg",
            "mathml"
          ],
          "default": "html",
          "prefixed": true,
          "observer": "_basicAttributeChanged"
        },
        "line-numbers": {
          "title": "Codeblock Line Numebrs",
          "type": "boolean",
          "prefixed": true,
          "observer": "_basicAttributeChanged"
        },
        "line-count-start": {
          "title": "Codeblock Line Numebr Count start offset",
          "type": "integer",
          "prefixed": true,
          "observer": "_basicAttributeChanged"
        }
      }
    }
  },
  "required": ["slots", "attributes", "events"],
  "additionalProperties": false
}
