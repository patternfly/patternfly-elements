{
  "extends": "../tsconfig.settings.json",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "pf-icon/icons/**/*.js",
    "pf-icon/icons/**/*",
    "*/demo/*.js",
    "pf-icon/test/rh-icon*.js",
    "react"
  ],
  "compilerOptions": {
    "paths": {
      "@patternfly/pfe-core": [
        "../core/pfe-core/core.ts"
      ],
      "@patternfly/pfe-core/*": [
        "../core/pfe-core/*"
      ]
    }
  },
  "references": [
    {
      "path": "../core/pfe-core"
    },
    {
      "path": "../tools/pfe-tools"
    }
  ]
}
