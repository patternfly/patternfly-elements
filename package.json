{
  "name": "@patternfly/patternfly-elements",
  "private": true,
  "type": "module",
  "description": "Monorepo for the PatternFly Elements project.",
  "keywords": [
    "web-components",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "github:patternfly/patternfly-elements"
  },
  "engines": {
    "node": ">=14 <=17"
  },
  "scripts": {
    "👷‍♀️-----DEV--------👷‍♀️": "❓ Development aids",
    "start": "npm config set quiet=true; eleventy --serve",
    "start:docs": "eleventy --serve",
    "dev": "run-p dev:*",
    "dev:server": "web-dev-server --open --watch",
    "dev:packages": "npm run dev --workspaces --if-present",
    "watch": "node scripts/watch.js",
    "watch:types": "npm run --workspaces --if-present watch:types",
    "storybook": "start-storybook -c .storybook -p 9001 -s ./elements --quiet",
    "new": "./tools/create-element/bin/main.js",
    "new:test": "yo ./generators/test",
    "demo": "npm run build -- --preview",
    "live-demo": "npm run dev",
    "👷‍♀️-----BUILD------👷‍♀️": "❓ Prepare dist artifacts",
    "prebuild:docs": "npm-run-all --serial clean:docs --parallel todos polyfills",
    "build": "node scripts/build.js",
    "build:docs": "eleventy",
    "build:types": "npm run --workspaces --if-present build:types",
    "build-storybook": "build-storybook -c .storybook -o ./storybook --quiet --loglevel error",
    "polyfills": "leasot -x --reporter json --tags 'POLYFILL' 'elements/*/src/*.js' | ./node_modules/node-jq/bin/jq 'map(select(.tag == \"POLYFILL\"))' > docs/_data/polyfills.json",
    "🧑‍🔬-----TEST-------🧑‍🔬": "❓ Test packages",
    "test": "node scripts/test.js",
    "test:watch": "npm config set group=default && npm config set element=\"*\" && web-test-runner \"elements/*/test/$npm_config_element.spec.js\" --node-resolve --watch --group=$npm_config_group",
    "test:build:watch": "npm config set element=\"*\" && npm run build \"$npm_config_element\" && npm run test:watch",
    "test:ci": "web-test-runner --node-resolve",
    "e2e": "run-s e2e:*",
    "e2e:clean": "npm run clean:e2e",
    "e2e:test": "wdio wdio.conf.js",
    "🚚-----DIST-------🚚": "❓ Publish packages",
    "release": "bash scripts/release.sh",
    "license-update": "node scripts/license-update.js",
    "leftover-check": "bash scripts/leftover-check.sh",
    "⚙️-----UTIL-------⚙️": "❓ Manages the repo",
    "clean": "rm -rf node_modules elements/*/{node_modules,package-lock.json}",
    "clean:components": "rm -rf elements/*/{dist,_temp}",
    "clean:e2e": "rm -f test/vrt-snapshots/{actual,diff}/desktop_{chrome,ie}/*",
    "clean:docs": "rm -rf _site/* && rm -fdr docs/components/*/",
    "clean:all": "npm-run-all --parallel clean:components clean:e2e",
    "bootstrap": "lerna bootstrap --hoist",
    "lerna": "lerna",
    "postinstall": "run-s postinstall:*",
    "postinstall:patch": "patch-package",
    "postinstall:bootstrap": "export FORCE_COLOR=3; npm run bootstrap",
    "pr": "node scripts/open-pr.js",
    "todos": "leasot -x --reporter json 'elements/*/src/*.js' > docs/_data/todos.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged && npm-run-all --parallel todos polyfills",
      "post-checkout": "npm run clean:components && npm run leftover-check"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "@patternfly/eslint-config-elements": "^0.0.1",
    "@patternfly/pfe-tools": "^0.0.1",
    "@types/numeral": "^2.0.2",
    "@types/prismjs": "^1.16.6",
    "commitlint": "^15.0.0",
    "cpx": "^1.5.0",
    "custom-elements-manifest": "^1.0.0",
    "decomment": "^0.9.1",
    "del": "^6.0.0",
    "foodoc": "0.0.9",
    "get-port": "^6.0.0",
    "ghp": "^1.3.1",
    "git-branch": "^2.0.1",
    "husky": "^7.0.4",
    "leasot": "^12.0.0",
    "lerna": "^4.0.0",
    "lorem-ipsum": "^2.0.3",
    "node-jq": "^2.0.1",
    "npm-merge-driver": "^2.3.6",
    "open": "^8.0.4",
    "renamer": "^4.0.0",
    "sassdoc": "^2.7.3",
    "shelljs": "^0.8.4",
    "util": "^0.12.1"
  },
  "workspaces": [
    "./elements/*",
    "./tools/*"
  ]
}
