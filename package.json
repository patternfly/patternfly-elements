{
  "name": "@patternfly/patternfly-elements",
  "private": true,
  "type": "module",
  "description": "Monorepo for the PatternFly Elements project.",
  "repository": {
    "type": "git",
    "url": "github:patternfly/patternfly-elements"
  },
  "engines": {
    "node": ">=16 <=19"
  },
  "scripts": {
    "ðŸ’-DEV": "â“ Development aids",
    "start": "wireit",
    "dev": "wireit",
    "dev:server": "wireit",
    "dev:tools": "wireit",
    "watch:docs": "wireit",
    "watch:docs:analyze": "wireit",
    "watch:docs:core": "wireit",
    "new": "./tools/create-element/bin/main.js",
    "ðŸš§-BUILD": "â“ Make packages and artifacts",
    "build": "wireit",
    "build:tools": "wireit",
    "build:elements": "wireit",
    "build:icons": "wireit",
    "build:core": "wireit",
    "build:lightdom": "wireit",
    "build:bundle": "wireit",
    "build:create": "wireit",
    "analyze": "wireit",
    "docs": "wireit",
    "site": "npm run build",
    "ðŸ§ª-TEST": "â“ Test packages",
    "test": "wireit",
    "test:ci": "wireit",
    "test:watch": "wtr --watch",
    "test:vue": "wtr --watch --group with-vue",
    "test:react": "wtr --watch --group with-react",
    "e2e": "wireit",
    "e2e:update": "wireit",
    "ðŸšš-DIST": "â“ Publish packages",
    "license-update": "node scripts/license-update.js",
    "leftover-check": "bash scripts/leftover-check.sh",
    "âš™ï¸--UTIL": "â“ Manages the repo",
    "postinstall": "wireit",
    "clean": "git clean -fX",
    "lint": "eslint .",
    "patch": "wireit",
    "husky": "wireit",
    "pr": "node scripts/open-pr.js"
  },
  "wireit": {
    "postinstall": {
      "dependencies": [
        "patch",
        "husky"
      ]
    },
    "patch": {
      "command": "patch-package"
    },
    "husky": {
      "command": "npx husky install"
    },
    "build": {
      "dependencies": [
        "build:tools",
        "analyze",
        "docs",
        "build:core",
        "build:icons",
        "build:lightdom",
        "build:elements",
        "build:create",
        "build:bundle"
      ]
    },
    "build:create": {
      "command": "tsc -b tools/create-element",
      "files": [
        "tools/create-element/*.ts",
        "tools/create-element/generator/**/*.ts"
      ],
      "output": [
        "tools/create-element/*.js",
        "tools/create-element/*.map",
        "tools/create-element/*.d.ts",
        "tools/create-element/generator/**/*.js",
        "tools/create-element/generator/**/*.map",
        "tools/create-element/generator/**/*.d.ts"
      ],
      "dependencies": [
        "build:core",
        "build:tools"
      ]
    },
    "build:elements": {
      "command": "ttsc --build elements --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:core",
        "build:tools"
      ],
      "files": [
        "elements/*/*.ts",
        "elements/*/*.css",
        "elements/tsconfig.json",
        "tsconfig.settings.json"
      ],
      "output": [
        "elements/*/*.js",
        "elements/*/*.js.map",
        "elements/*/*.d.ts",
        "elements/*.tsbuildinfo"
      ]
    },
    "build:tools": {
      "command": "tsc --build tools/pfe-tools --pretty",
      "clean": "if-file-deleted",
      "files": [
        "tools/pfe-tools/*.ts",
        "tools/pfe-tools/**/*.ts"
      ],
      "output": [
        "tools/*.tsbuildinfo"
      ]
    },
    "build:core": {
      "command": "ttsc --build ./core/pfe-core --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:tools"
      ],
      "files": [
        "core/**/*.ts",
        "core/tsconfig.json"
      ],
      "output": [
        "core/pfe-core/**/*.js",
        "core/pfe-core/**/*.map",
        "core/pfe-core/**/*.d.ts",
        "*.tsbuildinfo"
      ]
    },
    "build:icons": {
      "command": "ts-node --esm --project tsconfig.icons.json ./scripts/icons/build.ts",
      "dependencies": [
        "build:core",
        "build:tools"
      ],
      "output": [
        "elements/pfe-icon/icons/*/*.js"
      ]
    },
    "analyze": {
      "command": "npm run -ws --if-present analyze",
      "files": [
        "elements/**/*.ts",
        "elements/**/*.css",
        "core/**/*.ts",
        "tools/**/*.ts"
      ],
      "output": [
        "elements/custom-elements.json",
        "core/pfe-core/custom-elements.json"
      ],
      "dependencies": [
        "build:core",
        "build:tools"
      ]
    },
    "build:bundle": {
      "command": "scripts/bundle.js",
      "dependencies": [
        "build:core",
        "build:tools"
      ],
      "files": [
        "**/*.ts",
        "scripts/bundle.js"
      ],
      "output": [
        "elements/pfe.min.js"
      ]
    },
    "build:lightdom": {
      "command": "npm run build:lightdom --workspaces --if-present",
      "dependencies": [
        "build:tools"
      ]
    },
    "docs": {
      "command": "eleventy",
      "files": [
        "elements/*/docs/*",
        "docs/**/*"
      ],
      "output": [
        "_site"
      ],
      "dependencies": [
        "build:core",
        "build:tools",
        "analyze"
      ]
    },
    "dev": {
      "command": "web-dev-server --open --watch",
      "service": true,
      "dependencies": [
        "build:tools"
      ]
    },
    "watch:docs:analyze": {
      "service": true,
      "command": "npm run -ws --if-present analyze -- --watch",
      "files": [
        "elements/**/*.ts",
        "core/**/*.ts",
        "tools/**/*.ts"
      ],
      "dependencies": [
        "build:tools"
      ]
    },
    "watch:docs": {
      "command": "eleventy --serve",
      "service": true,
      "dependencies": [
        "build:tools",
        "build:core",
        "watch:docs:analyze"
      ]
    },
    "start": {
      "service": true,
      "command": "eleventy --serve",
      "dependencies": [
        "build:tools",
        "build:icons",
        "analyze",
        "dev",
        "watch:docs:analyze"
      ]
    },
    "test": {
      "command": "wtr --group default",
      "files": [
        "**/*.ts",
        "**/*.css"
      ],
      "output": [],
      "dependencies": [
        "build:tools",
        "build:icons"
      ]
    },
    "test:ci": {
      "command": "wtr",
      "files": [
        "**/*.ts",
        "**/*.css"
      ],
      "output": [],
      "dependencies": [
        "build:tools",
        "build:icons"
      ]
    },
    "e2e": {
      "command": "PW_EXPERIMENTAL_TS_ESM=1 playwright test",
      "dependencies": [
        "build:tools",
        "build:core",
        "analyze",
        "docs",
        "build:elements"
      ]
    },
    "e2e:update": {
      "command": "PW_EXPERIMENTAL_TS_ESM=1 playwright test --update-snapshots",
      "dependencies": [
        "build:tools",
        "build:core",
        "analyze",
        "docs",
        "build:elements"
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.3.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@jspm/generator": "^1.0.0-beta.33",
    "@octokit/core": "^4.1.0",
    "@patternfly/patternfly": "^4.210.2",
    "@types/koa__router": "^12.0.0",
    "@types/numeral": "^2.0.2",
    "@types/prismjs": "^1.26.0",
    "@types/prompts": "^2.4.1",
    "commitlint": "^17.4.2",
    "cpx": "^1.5.0",
    "fuse.js": "^6.6.2",
    "git-branch": "^2.0.1",
    "husky": "^8.0.3",
    "leasot": "^13.3.0",
    "npm-merge-driver": "^2.3.6",
    "nunjucks": "^3.2.3",
    "open": "^8.4.0",
    "prompts": "^2.4.2",
    "renamer": "^4.0.0",
    "wireit": "^0.9.3",
    "zero-md": "^2.3.6"
  },
  "workspaces": [
    "./core/*",
    "./elements",
    "./tools/*"
  ]
}
