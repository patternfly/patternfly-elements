    "ðŸŽ¨--TEST---VISUAL REGRESSION--ðŸŽ¨": "â“ Test packages for visual rergressions, locally",
    "test:e2e": "run-s test:e2e:build test:e2e:test",
    "test:e2e:build": "run-s build:tools build:analyze build:styles build:core build:docs build:elements",
    "test:e2e:compile": "esbuild ./*/*/test/*.e2e.spec.ts --tsconfig=tsconfig.e2e.json --outdir=. --entry-names=[dir]/[name]",
