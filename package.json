{
  "name": "@patternfly/patternfly-elements",
  "private": true,
  "type": "module",
  "description": "Monorepo for the PatternFly Elements project.",
  "repository": {
    "type": "git",
    "url": "github:patternfly/patternfly-elements"
  },
  "engines": { "node": ">=14 <=17" },
  "scripts": {
    "👷‍♀️-----DEV--------👷‍♀️": "❓ Development aids",
    "start": "run-p dev:* docs:analyze",
    "predocs": "npm run build",
    "docs": "run-p docs:*",
    "docs:analyze": "lerna run watch:analyze --parallel",
    "docs:build": "scripts/build.js --watch --demo",
    "docs:eleventy": "eleventy --serve --incremental --config=.eleventy.cjs",
    "start:demo": "npm run dev",
    "dev": "run-p dev:*",
    "dev:server": "web-dev-server --open --watch",
    "dev:packages": "lerna run dev --parallel",
    "watch:types": "tsc -b --watch",
    "new": "./tools/create-element/bin/main.js",
    "👷‍♀️-----BUILD------👷‍♀️": "❓ Prepare dist artifacts",
    "build": "run-s build:*",
    "build:tools": "npm run build --workspace @patternfly/pfe-tools",
    "build:analyze": "lerna run analyze --parallel",
    "build:styles": "npm run build --workspace @patternfly/pfe-styles",
    "build:core": "npm run build --workspace @patternfly/pfe-core",
    "build:elements": "scripts/build.js",
    "build:types": "tsc -b",
    "build:docs": "run-s build:docs:*",
    "build:docs:copy": "npx cpx '{core,elements}/*/**/*.{js,d.ts,js.map,css}' docs/demo",
    "build:docs:bundle": "scripts/build.js --demo",
    "build:docs:eleventy": "eleventy --config=.eleventy.cjs",
    "🧑‍🔬-----TEST-------🧑‍🔬": "❓ Test packages",
    "test": "wtr --group default",
    "🧑‍🔬--TEST---ALL FRAMEWORKS--🧑‍🔬": "❓ Test packages - all frameworks",
    "test:ci": "wtr",
    "test:watch": "wtr --watch",
    "test:vue": "wtr --watch --group with-vue",
    "test:react": "wtr --watch --group with-react",
    "🧑‍🔬--TEST---LIGHTHOUSE--🧑‍🔬": "❓ Test packages for page loading performance",
    "test:performance": "run-s test:performance:*",
    "test:performance:build": "esbuild test/performance.spec.ts --tsconfig=tsconfig.e2e.json --outdir=test",
    "test:performance:test": "playwright test -c playwright.performance.config.ts",
    "🧑‍🔬--TEST---VISUAL REGRESSION--🧑‍🔬": "❓ Test packages for visual rergressions, locally",
    "test:e2e": "run-s test:e2e:*",
    "test:e2e:build": "run-s build:tools build:analyze build:styles build:core build:docs build:elements",
    "test:e2e:compile": "esbuild ./*/*/test/*.e2e.spec.ts --tsconfig=tsconfig.e2e.json --outdir=. --entry-names=[dir]/[name]",
    "test:e2e:test": "playwright test",
    "🧑‍🔬--TEST---VIS. REGRESS. CI--🧑‍🔬": "❓ Test packages for visual regression, in CI",
    "test:browserstack": "run-s test:browserstack:*",
    "test:browserstack:compile": "esbuild ./*/*/test/*.e2e.spec.ts --tsconfig=tsconfig.e2e.json --outdir=test",
    "test:browserstack:test": "playwright test -c playwright.browserstack.config.ts",
    "🚚-----DIST-------🚚": "❓ Publish packages",
    "license-update": "node scripts/license-update.js",
    "leftover-check": "bash scripts/leftover-check.sh",
    "⚙️-----UTIL-------⚙️": "❓ Manages the repo",
    "clean": "git clean -dfx -e node_modules -e tsconfig.tsbuildinfo",
    "clean:deep": "git clean -dfx -e node_modules",
    "clean:nuke": "git clean -dfx",
    "lint": "eslint elements tools core scripts docs --ext js --ext ts",
    "postinstall": "run-s postinstall:**",
    "postinstall:patch": "patch-package",
    "postinstall:build:tools": "npm run build --workspace @patternfly/pfe-tools",
    "postinstall:build:styles": "npm run build --workspace @patternfly/pfe-styles",
    "postinstall:build:core": "npm run build:sass --workspace @patternfly/pfe-core",
    "pr": "node scripts/open-pr.js",
    "todos": "leasot -x --reporter json 'elements/**/*[!.spec].ts' > docs/_data/todos.json"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0-beta.8",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "@orchidjs/eleventy-plugin-ids": "^0.1.1",
    "@patternfly/eslint-config-elements": "^0.0.1",
    "@patternfly/pfe-tools": "^0.0.1",
    "@types/numeral": "^2.0.2",
    "@types/prismjs": "^1.16.6",
    "browserstack-local": "^1.4.8",
    "commitlint": "^15.0.0",
    "compression": "^1.7.4",
    "cpx": "^1.5.0",
    "custom-elements-manifest": "^1.0.0",
    "decomment": "^0.9.1",
    "del": "^6.0.0",
    "eslint": "^8.5.0",
    "foodoc": "0.0.9",
    "get-port": "^6.0.0",
    "ghp": "^1.3.1",
    "git-branch": "^2.0.1",
    "html-include-element": "^0.2.0",
    "husky": "^7.0.4",
    "leasot": "^12.0.0",
    "lerna": "^4.0.0",
    "lorem-ipsum": "^2.0.3",
    "mdast-builder": "^1.1.1",
    "mdast-util-compact": "^4.1.0",
    "mdast-util-from-markdown": "^1.2.0",
    "mdast-util-gfm-table": "^1.0.1",
    "mdast-util-to-markdown": "^1.2.6",
    "node-jq": "^2.0.1",
    "npm-merge-driver": "^2.3.6",
    "npm-run-all": "^4.1.5",
    "open": "^8.0.4",
    "playwright": "^1.16.3",
    "playwright-lighthouse": "^2.0.4",
    "postcss": "^8.2.4",
    "postcss-custom-properties": "^12.0.0",
    "pwa-helpers": "^0.9.1",
    "renamer": "^4.0.0",
    "sassdoc": "^2.7.3",
    "shelljs": "^0.8.4",
    "ts-node": "^10.4.0",
    "urlpattern-polyfill": "^1.0.0-rc1",
    "util": "^0.12.1"
  },
  "workspaces": [
    "./core/*",
    "./elements/*",
    "./tools/*"
  ]
}
