{
  "name": "@patternfly/patternfly-elements",
  "private": true,
  "type": "module",
  "description": "Monorepo for the PatternFly Elements project.",
  "repository": {
    "type": "git",
    "url": "github:patternfly/patternfly-elements"
  },
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "üêí-DEV": "‚ùì Development aids",
    "start": "wireit",
    "dev": "wireit",
    "üöß-BUILD": "‚ùì Make packages and artifacts",
    "build": "wireit",
    "build:create": "wireit",
    "analyze": "wireit",
    "docs": "wireit",
    "site": "npm run build",
    "new": "npm run build:create && ./tools/create-element/bin/main.js",
    "üß™-TEST": "‚ùì Test packages",
    "test": "wireit",
    "test:ci": "wireit",
    "test:ssr": "wireit",
    "test:watch": "wtr --watch",
    "e2e": "wireit",
    "e2e:update": "wireit",
    "üöö-DIST": "‚ùì Publish packages",
    "leftover-check": "bash scripts/leftover-check.sh",
    "‚öôÔ∏è--UTIL": "‚ùì Manages the repo",
    "postinstall": "wireit",
    "clean": "git clean -dfx -e node_modules -e .husky",
    "nuke": "git clean -dfx",
    "lint": "eslint",
    "patch": "patch-package",
    "husky": "husky"
  },
  "wireit": {
    "postinstall": {
      "dependencies": [
        "patch",
        "husky"
      ]
    },
    "build": {
      "dependencies": [
        "build:tools",
        "analyze",
        "docs",
        "build:core",
        "build:lightdom",
        "build:elements",
        "build:create",
        "build:bundle",
        "build:react"
      ]
    },
    "analyze": {
      "command": "npm run -ws --if-present analyze",
      "files": [
        "elements/*/demo/*.html",
        "elements/**/*.ts",
        "elements/**/*.css",
        "core/**/*.ts",
        "tools/**/*.ts"
      ],
      "output": [
        "elements/custom-elements.json",
        "core/pfe-core/custom-elements.json"
      ],
      "dependencies": [
        "build:core"
      ]
    },
    "build:create": {
      "command": "tsc -b tools/create-element",
      "files": [
        "tools/create-element/*.ts",
        "tools/create-element/generator/**/*.ts"
      ],
      "output": [
        "tools/create-element/*.tsbuildinfo"
      ],
      "dependencies": [
        "build:core",
        "build:tools"
      ]
    },
    "build:elements": {
      "command": "tspc --build elements/tsconfig.build.json --pretty",
      "dependencies": [
        "build:core"
      ],
      "files": [
        "elements/*/*.ts",
        "!elements/*/*.d.ts",
        "elements/*/*.css",
        "elements/tsconfig.json",
        "tsconfig.settings.json"
      ],
      "output": [
        "elements/*/*.js",
        "elements/*/*.js.map",
        "elements/*/*.d.ts",
        "elements/*.tsbuildinfo"
      ]
    },
    "build:tools": {
      "command": "tsc --build tools/pfe-tools --pretty",
      "files": [
        "tools/pfe-tools/*.ts",
        "tools/pfe-tools/**/*.ts",
        "!tools/pfe-tools/*.d.ts",
        "!tools/pfe-tools/**/*.d.ts"
      ],
      "output": [
        "tools/pfe-tools/**/*.js",
        "tools/pfe-tools/**/*.map",
        "tools/pfe-tools/**/*.d.ts",
        "tools/*.tsbuildinfo"
      ]
    },
    "build:core": {
      "command": "tspc --build ./core/pfe-core --pretty",
      "dependencies": [
        "build:tools"
      ],
      "files": [
        "core/**/*.ts",
        "!core/**/*.d.ts",
        "core/tsconfig.json"
      ],
      "output": [
        "core/**/*.js",
        "core/**/*.map",
        "core/**/*.d.ts",
        "*.tsbuildinfo"
      ]
    },
    "build:bundle": {
      "command": "node scripts/bundle.js",
      "dependencies": [
        "build:core"
      ],
      "files": [
        "elements/**/*.ts",
        "elements/**/*.css",
        "core/**/*.ts",
        "scripts/bundle.js"
      ],
      "output": [
        "elements/pfe.min.js"
      ]
    },
    "build:react": {
      "command": "npx tsx scripts/generate-react-wrappers.ts",
      "dependencies": [
        "build:core",
        "analyze"
      ],
      "files": [
        "elements/custom-elements.json",
        "scripts/generate-react-wrappers.ts",
        "tools/pfe-tools/react/generate-wrappers.ts"
      ],
      "output": [
        "react/**/*"
      ]
    },
    "build:lightdom": {
      "command": "npm run build:lightdom --workspaces --if-present",
      "dependencies": [
        "build:core"
      ]
    },
    "docs": {
      "command": "eleventy --incremental",
      "files": [
        "elements/*/docs/*",
        "docs/**/*"
      ],
      "output": [
        "_site"
      ],
      "dependencies": [
        "build:core",
        "analyze"
      ]
    },
    "dev": {
      "command": "web-dev-server --open --watch",
      "service": true,
      "dependencies": [
        "build:elements",
        "analyze"
      ]
    },
    "watch:core": {
      "service": true,
      "command": "tspc --build --watch ./core/pfe-core --pretty"
    },
    "watch:analyze": {
      "service": true,
      "command": "npm run -ws --if-present analyze -- --watch",
      "files": [
        "elements/**/*.ts",
        "core/**/*.ts",
        "tools/**/*.ts"
      ],
      "dependencies": [
        "build:tools"
      ]
    },
    "serve": {
      "service": true,
      "command": "eleventy --serve",
      "dependencies": [
        "build:core",
        "analyze",
        "watch:analyze"
      ]
    },
    "start": {
      "dependencies": [
        "dev",
        "serve"
      ]
    },
    "test": {
      "command": "wtr",
      "files": [
        "**/*.ts",
        "**/*.css"
      ],
      "output": [],
      "dependencies": [
        "build:tools",
        "build:core"
      ]
    },
    "new": {
      "command": "./tools/create-element/bin/main.js",
      "dependencies": [
        "build:create"
      ]
    },
    "test:ci": {
      "command": "wtr",
      "files": [
        "**/*.ts",
        "**/*.css"
      ],
      "output": [],
      "dependencies": [
        "build:tools",
        "build:core"
      ]
    },
    "test:ssr": {
      "command": "npx playwright test -g ssr --update-snapshots",
      "dependencies": [
        "clean",
        "build:tools",
        "build:core",
        "build:elements"
      ]
    },
    "e2e": {
      "command": "PW_EXPERIMENTAL_TS_ESM=1 playwright test",
      "dependencies": [
        "build:tools",
        "build:core",
        "analyze",
        "docs",
        "build:elements"
      ]
    },
    "e2e:update": {
      "command": "PW_EXPERIMENTAL_TS_ESM=1 playwright test --update-snapshots",
      "dependencies": [
        "build:tools",
        "build:core",
        "analyze",
        "docs",
        "build:elements"
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jspm/generator": "^2.1.1",
    "@lit/react": "^1.0.5",
    "@octokit/core": "^6.1.2",
    "@patternfly/patternfly": "^4.224.2",
    "@rhds/elements": "^1.4.5",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.14.10",
    "@types/numeral": "^2.0.5",
    "@types/prismjs": "^1.26.4",
    "@types/prompts": "^2.4.9",
    "chalk": "^5.3.0",
    "commitlint": "^19.3.0",
    "eslint": "^9.6.0",
    "execa": "^9.3.0",
    "fuse.js": "^7.0.0",
    "husky": "^9.0.11",
    "leasot": "^14.4.0",
    "lit": "^3.1.4",
    "nunjucks": "^3.2.4",
    "postcss-nesting": "^12.1.5",
    "prompts": "^2.4.2",
    "typescript": "^5.5.3",
    "wireit": "^0.14.5",
    "zero-md": "^3.0.0"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.23.0",
    "@rollup/rollup-darwin-arm64": "^4.18.1"
  },
  "workspaces": [
    "./core/*",
    "./elements",
    "./tools/*"
  ]
}
