{
  "name": "@patternfly/pfe-tools",
  "version": "0.0.1",
  "type": "module",
  "description": "Development and build tools for PatternFly Elements and related projects",
  "keywords": [
    "web-components",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "github:patternfly/patternfly-elements",
    "directory": "tools/pfe-tools"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  },
  "exports": {
    "./11ty": "./11ty/index.js",
    "./*.js": {
      "esbuild": "./*.ts",
      "default": "./*.js"
    },
    "./*": {
      "esbuild": "./*.ts",
      "default": "./*.js"
    },
    "./environment.js": {
      "esbuild": "./environment.ts",
      "default": "./environment.js"
    }
  },
  "contributors": [
    "Kyle Buchanan <kylebuch8@gmail.com>, (https://github.com/kylebuch8)",
    "Benny Powers <bepowers@redhat.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patternfly/patternfly-elements/issues"
  },
  "scripts": {
    "build": "tsc -b .",
    "rebuild": "rm tsconfig.tsbuildinfo && tsc -b .",
    "clean": "git clean -fX -e node_modules -e tsconfig.tsbuildinfo",
    "dev": "node _scripts/dev.js",
    "prepublishOnly": "npm run rebuild"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@custom-elements-manifest/analyzer": "^0.5.6",
    "@open-wc/testing": "^3.0.1",
    "@orchidjs/eleventy-plugin-ids": "^0.1.1",
    "@percy/cli": "^1.0.0-beta.71",
    "@percy/playwright": "^1.0.1",
    "@playwright/test": "^1.17",
    "@types/estree": "^0.0.50",
    "@types/glob": "7.2.0",
    "@types/inquirer": "^8.1.3",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.0.0",
    "@types/sass": "^1.43.1",
    "@types/sinon": "^10.0.6",
    "@types/uglifycss": "^0.0.7",
    "@types/yargs": "^17.0.8",
    "@vaadin/split-layout": "^22.0.2",
    "@web/dev-server": "^0.1.29",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/dev-server-import-maps": "^0.0.6",
    "@web/dev-server-rollup": "^0.3.14",
    "@web/test-runner": "^0.13.25",
    "@web/test-runner-junit-reporter": "^0.4.10",
    "@web/test-runner-playwright": "^0.8.8",
    "api-viewer-element": "^0.6.4",
    "cem-plugin-module-file-extensions": "^0.0.2",
    "cem-plugin-readonly": "^0.0.2",
    "compression": "^1.7.4",
    "dedent": "^0.7.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.11",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-plugin-lit-css": "^1.2.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "html-include-element": "^0.2.0",
    "lit": "^2.1.1",
    "mdast-builder": "^1.1.1",
    "mdast-util-compact": "^4.1.0",
    "mdast-util-from-markdown": "^1.2.0",
    "mdast-util-gfm-table": "^1.0.1",
    "mdast-util-to-markdown": "^1.2.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.16.3",
    "playwright-lighthouse": "^2.0.4",
    "pwa-helpers": "^0.9.1",
    "rollup-plugin-lit-css": "^3.2.1",
    "sass": "^1.47.0",
    "sinon": "^12.0.1",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "urlpattern-polyfill": "^1.0.0-rc1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@types/dedent": "^0.7.0",
    "patch-package": "^6.4.7"
  }
}
