{
  "files": [
    "./declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/demo/*.js",
    "**/demo/*.d.ts",
    "**/_temp/**/*",
    "**/custom-elements-manifest.config.js",
    "**/*.story.*",
    "**/test/*_e2e*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": true,
    "preserveValueImports": true,
    // Although TS 5.5 deprecates `preserveValueImports`, in favour of `verbatimModuleSyntax`,
    // [see docs](https://www.typescriptlang.org/tsconfig#preserveValueImports)
    // esbuild is not yet ready to remove it, which affects our tests and dev server
    // [see issue](https://github.com/evanw/esbuild/issues/3019)
    "ignoreDeprecations": "5.0",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "useDefineForClassFields": false,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "plugins": [
      {
        "transform": "@patternfly/pfe-tools/typescript/transformers/css-imports.cjs",
        "inline": true,
        "minify": true
      },
      {
        "name": "typescript-lit-html-plugin"
      },
      {
        "name": "ts-lit-plugin"
      }
    ],
    "lib": [
      "DOM.iterable",
      "DOM",
      "es2015.iterable",
      "es2020",
      "es2022",
      "es5",
      "es6",
      "ScriptHost"
    ],
    "paths": {
      "@custom-elements-manifest/analyzer": [
        "@types/custom-elements-manifest__analyzer"
      ],
      "@custom-elements-manifest/analyzer/*": [
        "@types/custom-elements-manifest__analyzer/*"
      ],
      "@patternfly/elements/*": [
        "./elements/*"
      ],
      "@patternfly/patternfly/*": [
        "@patternfly/patternfly/*"
      ],
      "@patternfly/pfe-core/*": [
        "./core/pfe-core/*"
      ],
      "@patternfly/pfe-tools/*": [
        "./tools/pfe-tools/*"
      ]
    }
  }
}
